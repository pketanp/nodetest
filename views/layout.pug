doctype html
html
	head 
		title NodeJsTutorial
		link(rel="shortcut icon", href="/images/Untitled.png", type="image/png", sizes="any")
		link(rel="icon", href="/images/Untitled.png", type="image/png", sizes="any")
		link(rel="apple-touch-ico", href="/images/Untitled.png", type="image/png", sizes="any")
		link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css")
		link(rel="stylesheet" href="/css/style.css")
	body
		.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
			h5.my-0.mr-md-auto.font-weight-normal 
				a(href='/') Node Testing
			nav.my-2.my-md-0.mr-md-3.py-2
				a.p-2.text-dark.mx-2(href='/') Home
				a.p-2.text-dark.mx-2(href='/articles/add') Add Articles
			if user 
				a.btn.btn-outline-primary.mx-2(href='/users/logout') Logut
			else
				a.btn.btn-outline-primary.mx-2(href='/users/login') Login
				a.btn.btn-outline-primary.mx-2(href='/users/register') Sign up
		.container.pt-3
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
			block content
		br
		hr
		footer 
			p copyright &copy; 2021
