extends layout

block content
	h1= article.title
	h5 written by #{author}
	p= article.body
	hr
	if user 
		if user.id == article.author
			a.btn.btn-outline-secondary.px-3.mx-3(href="/articles/edit/"+article._id) Edit
			a.btn.btn-danger.delete-article.px-3.mx-3(href="#",data-id=article._id) Delete
	